<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="440.0" prefWidth="741.0" style="-fx-background-image: url('/img/banner/home-banner.jpg');" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.controllers.RegisterController">
   <children>

      <MenuBar prefHeight="51.0" prefWidth="804.0" style="-fx-background-color: #ebe5e9;">
         <!-- menus (inchangés pour la démo) -->
      </MenuBar>

      <VBox layoutX="254.0" layoutY="64.0" prefHeight="375.0" prefWidth="264.0" style="-fx-background-color: white;">
         <children>
            <Label alignment="CENTER" prefWidth="265.0" text="Register Now" textAlignment="CENTER">
               <font>
                  <Font name="System Bold" size="19.0" />
               </font>
            </Label>
            <Label alignment="CENTER" text="Entrer vos informations" textFill="#767373" />

            <Label text="Nom " textFill="#767373" />
            <TextField fx:id="nomField" prefWidth="228.0" />

            <Label text="Prénom" textFill="#767373" />
            <TextField fx:id="prenomField" prefWidth="228.0" />

            <Label text="Email" textFill="#767373" />
            <TextField fx:id="emailField" prefWidth="228.0" />

            <Label text="Mot de passe" textFill="#767373" />
            <PasswordField fx:id="motDePasseField" prefWidth="228.0" />

            <Label text="Numéro de téléphone" textFill="#767373" />
            <TextField fx:id="numeroTelField" prefWidth="228.0" />

            <Label text="Role" textFill="#767373" />
            <ChoiceBox fx:id="roleChoiceBox" prefWidth="150.0" />

            <Button fx:id="envoyerButton" onAction="#handleEnvoyer" prefWidth="265.0" style="-fx-background-color: #FFC727;" text="Envoyer" />
         </children>
      </VBox>
   </children>
</AnchorPane>
