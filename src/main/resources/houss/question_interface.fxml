<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Priority?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.controllers.houss.QuestionController"
      spacing="25"
      alignment="TOP_CENTER"
      style="-fx-padding: 30; -fx-background-color: linear-gradient(to bottom, #2c3e50, #34495e); -fx-background-radius: 15;">

   <!-- Titre principal -->
   <Label text="ðŸ“‹ Questions de l'Examen"
          style="-fx-font-size: 28px; -fx-text-fill: #ecf0f1; -fx-font-weight: bold; -fx-effect: dropshadow(gaussian, black, 2, 0, 1, 1);" />

   <!-- Titre dynamique de l'examen -->
   <Label fx:id="labelExamenTitre"
          text="Examen : [Titre de l'examen ici]"
          style="-fx-font-size: 18px; -fx-text-fill: #bdc3c7;" />

   <!-- Bouton Ajouter une Question -->
   <Button fx:id="ajouterButton"
           text="âž• Ajouter une Question"
           onAction="#ouvrirAjout"
           style=" -fx-font-size: 16px;
                   -fx-background-color: #27ae60;
                   -fx-text-fill: white;
                   -fx-padding: 12 25;
                   -fx-font-weight: bold;
                   -fx-background-radius: 10;
                   -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 5, 0, 0, 2);
                   -fx-cursor: hand; " />

   <!-- ScrollPane pour afficher les questions -->
   <ScrollPane fitToWidth="true"
               vbarPolicy="AS_NEEDED"
               style="-fx-background-color: transparent; -fx-border-color: #ffffff22; -fx-border-radius: 10; -fx-padding: 10;">
      <VBox fx:id="questionContainer"
            spacing="15"
            style="-fx-padding: 10;">
         <padding>
            <Insets top="10" right="10" bottom="10" left="10"/>
         </padding>
      </VBox>
   </ScrollPane>

</VBox>
