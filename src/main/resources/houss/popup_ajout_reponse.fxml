<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.controllers.houss.AjouterReponseController"
      spacing="15"
      alignment="CENTER"
      style="-fx-padding: 25; -fx-background-color: #2c3e50; -fx-background-radius: 15;">

   <Label text="Ajouter une Réponse"
          style="-fx-font-size: 20px; -fx-text-fill: #ecf0f1;"/>

   <!-- Zone de texte pour saisir le texte de la réponse et la valeur de 'estCorrecte' (true/false) -->
   <TextField fx:id="reponseField"
              promptText="Contenu de la réponse (true/false pour estCorrecte)"
              style="-fx-font-size: 14px;"/>

   <Button text="✅ Ajouter"
           onAction="#ajouterReponse"
           style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 10;"/>

</VBox>
