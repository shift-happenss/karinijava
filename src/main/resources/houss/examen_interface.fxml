<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox maxHeight="466.0" maxWidth="900.0" prefHeight="466.0" prefWidth="678.0" spacing="20" style="-fx-background-color: linear-gradient(to bottom, #1d2671, #dfc51e); -fx-padding: 30;" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="org.example.controllers.houss.ExamenController">

   <!-- Sidebar à gauche -->
   <fx:include source="sidebar.fxml" />

   <!-- Contenu principal -->
   <VBox alignment="TOP_CENTER" layoutX="100.0" spacing="20" style="-fx-padding: 30;" HBox.hgrow="ALWAYS">

      <Label style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: white;" text="📝 Liste des Examens" />

      <Button onAction="#openAddExamenPopup" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10 20; -fx-background-radius: 15;" text="➕ Ajouter un examen" />

      <ScrollPane hbarPolicy="NEVER" style="-fx-background-color: transparent; -fx-border-width: 0;" vbarPolicy="ALWAYS">
         <GridPane fx:id="examenContainer" alignment="TOP_CENTER" hgap="20" style="-fx-padding: 20;" vgap="20">
         </GridPane>
      </ScrollPane>

   </VBox>
</HBox>
