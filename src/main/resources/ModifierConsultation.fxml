<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="500" prefWidth="500" style="-fx-background-color: #f4f4f4;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="consultation.psy.controllers.ModifierConsultationController">

    <Label layoutX="30" layoutY="20" style="-fx-font-size: 18px;" text="Modifier Consultation" />

    <Label layoutX="30" layoutY="70" text="Date :" />
    <DatePicker fx:id="datePicker" layoutX="150" layoutY="65" />

    <Label layoutX="30" layoutY="110" text="Heure :" />
    <TextField fx:id="timeField" layoutX="150" layoutY="105" />

    <Label layoutX="30" layoutY="150" text="Raison :" />
    <TextArea fx:id="raisonField" layoutX="150" layoutY="145" prefHeight="60" prefWidth="250" />

    <Label layoutX="30" layoutY="230" text="Statut :" />
    <TextField fx:id="statusField" disable="true" layoutX="150" layoutY="225" />


    <Label layoutX="30" layoutY="350" text="Psychologue :" />
    <ComboBox fx:id="psyCombo" layoutX="150" layoutY="345" prefWidth="250" />

    <Button layoutX="150" layoutY="420" onAction="#modifier" text="Modifier" />
    <Button layoutX="250" layoutY="420" onAction="#supprimer" style="-fx-background-color: red; -fx-text-fill: white;" text="Supprimer" />
    <Button fx:id="btnRetour" layoutX="414.0" layoutY="14.0" onAction="#retour" text="← Retour" />

</AnchorPane>
