<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="tn.esprit.controllers.AfficherEvenementController">
    <children>
        <VBox spacing="15" layoutX="20" layoutY="20" prefWidth="800" prefHeight="600" style="-fx-background-color: #f0f8ff;">
            <!-- Barre d'action -->
            <HBox spacing="10" alignment="CENTER">
                <Button text="Ajouter Evenement" onAction="#handleAjouterEvenement" style="-fx-background-color: #FFD700; -fx-text-fill: #00008B;"/>
            </HBox>
            <!-- Liste des Evenements -->
            <VBox fx:id="vboxEvenements" spacing="10"/>
        </VBox>
        <Button fx:id="btnEvenements" text="Retour aux emplois"
                layoutX="480" layoutY="380"
                onAction="#handleRetourEmploi"
                style="-fx-background-color: #ADD8E6; -fx-text-fill: #00008B;" />
    </children>
</AnchorPane>
