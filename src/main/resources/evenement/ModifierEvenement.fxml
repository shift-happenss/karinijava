<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1"
            xmlns="http://javafx.com/javafx/13"
            fx:controller="org.example.controllers.ahmed.ModifierEvenementController"
            prefWidth="1290" prefHeight="690"
            stylesheets="@/dashboard.css">
    <children>
        <VBox fx:id="rootContainer"
              AnchorPane.topAnchor="0" AnchorPane.leftAnchor="0"
              AnchorPane.rightAnchor="0" AnchorPane.bottomAnchor="0" spacing="0">

            <!-- Contenu principal qui prend tout l'espace disponible -->
            <VBox styleClass="vbox-content" spacing="10" VBox.vgrow="ALWAYS">
                <Label text="Modifier l'Événement" style="-fx-font-size: 22px; -fx-font-weight: bold;"/>

                <VBox spacing="5">
                    <Label text="Nom :" style="-fx-font-weight: bold;"/>
                    <TextField fx:id="tfNom" promptText="Nom de l'événement" style="-fx-background-color: #FFFFFF;" prefWidth="400"/>
                </VBox>
                <VBox spacing="5">
                    <Label text="Type :" style="-fx-font-weight: bold;"/>
                    <TextField fx:id="tfType" promptText="Type d'événement" style="-fx-background-color: #FFFFFF;" prefWidth="400"/>
                </VBox>
                <VBox spacing="5">
                    <Label text="Date de début :" style="-fx-font-weight: bold;"/>
                    <DatePicker fx:id="dpDateDebut" prefWidth="400"/>
                </VBox>
                <VBox spacing="5">
                    <Label text="Date de fin :" style="-fx-font-weight: bold;"/>
                    <DatePicker fx:id="dpDateFin" prefWidth="400"/>
                </VBox>
                <VBox spacing="5">
                    <Label text="Contenu :" style="-fx-font-weight: bold;"/>
                    <TextArea fx:id="taContenu" promptText="Contenu de l'événement" prefRowCount="4" style="-fx-background-color: #FFFFFF;" prefWidth="400"/>
                </VBox>
                <VBox spacing="5">
                    <Label text="Lieu :" style="-fx-font-weight: bold;"/>
                    <TextField fx:id="tfLieu" promptText="Lieu de l'événement" style="-fx-background-color: #FFFFFF;" prefWidth="400"/>
                </VBox>
                <VBox spacing="5">
                    <Label text="Latitude :" style="-fx-font-weight: bold;"/>
                    <TextField fx:id="tfLatitude" promptText="Latitude" style="-fx-background-color: #FFFFFF;" prefWidth="400"/>
                </VBox>
                <VBox spacing="5">
                    <Label text="Longitude :" style="-fx-font-weight: bold;"/>
                    <TextField fx:id="tfLongitude" promptText="Longitude" style="-fx-background-color: #FFFFFF;" prefWidth="400"/>
                </VBox>
                <HBox spacing="5" alignment="CENTER">
                    <Button text="Modifier" onAction="#handleModifier" styleClass="button-success"/>
                    <Button text="Annuler" onAction="#handleAnnuler" styleClass="button-danger"/>
                </HBox>
            </VBox>

            <!-- Footer fixé en bas -->
            <HBox styleClass="hbox" spacing="10" style="-fx-background-color: blue;">
                <Hyperlink text="Terms of Service" styleClass="button-link"/>
                <Hyperlink text="Privacy Policy" styleClass="button-link"/>
                <Hyperlink text="Help" styleClass="button-link"/>
                <Label text=" " style="-fx-pref-width: 400px;"/>
                <Label text="Search..." style="-fx-text-fill: #00008B;"/>
            </HBox>
        </VBox>
    </children>
</AnchorPane>
