<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1"
            xmlns="http://javafx.com/javafx/17"
            fx:controller="org.example.controllers.ahmed.DetailsEvenementController"
            prefWidth="1290" prefHeight="690"
            stylesheets="@/dashboard.css">

    <children>
        <VBox fx:id="rootContainer" spacing="0" AnchorPane.topAnchor="0" AnchorPane.leftAnchor="0"
              AnchorPane.rightAnchor="0" AnchorPane.bottomAnchor="0">

            <!-- En-tête bleu -->
            <HBox styleClass="header" spacing="20">
                <Button text="Accueil" styleClass="button-nav"/>
                <Button text="Événements" styleClass="button-nav"/>
                <Button text="Carte" styleClass="button-nav"/>
                <Button text="Contact" styleClass="button-nav"/>
            </HBox>

            <!-- Contenu scrollable -->
            <ScrollPane fitToWidth="true" style="-fx-background: white;">
                <VBox style="-fx-padding: 20px; -fx-spacing: 15px;">
                    <!-- Titre -->
                    <Label text="Détails de l'Événement" styleClass="title-label"/>

                    <Separator styleClass="separator"/>

                    <!-- Section Informations -->
                    <VBox styleClass="info-box" spacing="10">
                        <HBox spacing="10">
                            <Label text="Nom :" styleClass="field-label"/>
                            <Label fx:id="lblNom" styleClass="value-label"/>
                        </HBox>

                        <HBox spacing="10">
                            <Label text="Type :" styleClass="field-label"/>
                            <Label fx:id="lblType" styleClass="value-label"/>
                        </HBox>

                        <HBox spacing="10">
                            <Label text="Date Début :" styleClass="field-label"/>
                            <Label fx:id="lblDateDebut" styleClass="value-label"/>
                        </HBox>

                        <HBox spacing="10">
                            <Label text="Date Fin :" styleClass="field-label"/>
                            <Label fx:id="lblDateFin" styleClass="value-label"/>
                        </HBox>

                        <HBox spacing="10">
                            <Label text="Lieu :" styleClass="field-label"/>
                            <Label fx:id="lblLieu" styleClass="value-label"/>
                        </HBox>

                        <HBox spacing="10">
                            <Label text="Latitude :" styleClass="field-label"/>
                            <Label fx:id="lblLatitude" styleClass="value-label"/>
                        </HBox>

                        <HBox spacing="10">
                            <Label text="Longitude :" styleClass="field-label"/>
                            <Label fx:id="lblLongitude" styleClass="value-label"/>
                        </HBox>
                    </VBox>

                    <!-- Section Contenu + Image -->
                    <HBox spacing="20" alignment="TOP_LEFT">
                        <VBox styleClass="description-box" spacing="10" prefWidth="400">
                            <Label text="Description :" styleClass="section-title"/>
                            <Label fx:id="lblContenu" styleClass="content-text" wrapText="true"/>
                        </VBox>

                        <VBox spacing="10" style="-fx-padding: 10px;">
                            <Label text="Image de l'événement :" styleClass="section-title"/>
                            <ImageView fx:id="imgEvent" fitWidth="400" fitHeight="250" preserveRatio="true"
                                       styleClass="image-frame"/>
                        </VBox>
                    </HBox>

                    <!-- Boutons -->
                    <HBox spacing="20" style="-fx-padding: 20px 0;">
                        <Button fx:id="btnMap" text="Voir sur la carte" styleClass="map-button" onAction="#handleMap"/>
                        <Button text="Retour" styleClass="back-button" onAction="#handleRetour"/>
                    </HBox>
                </VBox>
            </ScrollPane>

            <!-- Pied de page bleu -->
            <HBox styleClass="footer" spacing="30">
                <Hyperlink text="Mentions légales" styleClass="footer-link"/>
                <Hyperlink text="Confidentialité" styleClass="footer-link"/>
                <Hyperlink text="Support" styleClass="footer-link"/>
            </HBox>
        </VBox>
    </children>
</AnchorPane>