<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="tn.esprit.controllers.DetailsEvenementController">
    <children>
        <VBox spacing="15" alignment="CENTER" AnchorPane.topAnchor="20" AnchorPane.bottomAnchor="20" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20" style="-fx-background-color: #f0f8ff;">
            <Label text="Détails de l'Événement" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #00008B;"/>
            <Label fx:id="lblNom" style="-fx-font-size: 16px; -fx-text-fill: #00008B;"/>
            <Label fx:id="lblType" style="-fx-font-size: 14px; -fx-text-fill: #00008B;"/>
            <Label fx:id="lblDateDebut" style="-fx-text-fill: #00008B;"/>
            <Label fx:id="lblDateFin" style="-fx-text-fill: #00008B;"/>
            <Label fx:id="lblContenu" style="-fx-text-fill: #00008B;"/>
            <Label fx:id="lblLieu" style="-fx-text-fill: #00008B;"/>
            <Label fx:id="lblLatitude" style="-fx-text-fill: #00008B;"/>
            <Label fx:id="lblLongitude" style="-fx-text-fill: #00008B;"/>
            <Button text="Retour" onAction="#handleRetour" style="-fx-background-color: #FFD700; -fx-text-fill: #00008B;"/>
        </VBox>
    </children>
</AnchorPane>
