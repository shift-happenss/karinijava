<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controllers.ModifierExamenController"
      prefWidth="500"
      spacing="20"
      alignment="TOP_CENTER"
      style="-fx-background-color: linear-gradient(to bottom, #1d2671, #dfc51e); -fx-padding: 30;">

   <Label text="✏️ Modifier un Examen"
          style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: white;" />

   <TextField fx:id="titreField"
              promptText="Titre de l'examen"
              style="-fx-padding: 10; -fx-font-size: 14px;"/>

   <TextField fx:id="descriptionField"
              promptText="Description de l'examen"
              style="-fx-padding: 10; -fx-font-size: 14px;"/>

   <ComboBox fx:id="coursComboBox"
             style="-fx-padding: 10; -fx-font-size: 14px;"/>

   <Spinner fx:id="noteSpinner"
            style="-fx-padding: 10; -fx-font-size: 14px;"/>

   <Button text="Enregistrer"
           onAction="#modifierExamen"
           style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10 20; -fx-background-radius: 15;"/>
</VBox>
