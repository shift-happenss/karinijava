<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<HBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.controllers.Formation.FormationCardFrontController"
      spacing="15" alignment="CENTER_LEFT"
      style="-fx-background-color: #ffffff; -fx-border-color: #dcdcdc; -fx-border-radius: 10; -fx-padding: 15; -fx-background-radius: 10;">

    <VBox spacing="8">
        <Label fx:id="titreLabel" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #3f51b5;" />
        <Label fx:id="descriptionLabel" wrapText="true" style="-fx-text-fill: #555555;" maxWidth="500"/>
        <Label fx:id="formateurLabel" style="-fx-text-fill: #777777;" />
    </VBox>

    <Button text="Voir plus" onAction="#handleVoirDetails"
            style="-fx-background-color: #673ab7; -fx-text-fill: white; -fx-background-radius: 8;" />
</HBox>

