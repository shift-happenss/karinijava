<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="tn.esprit.controllers.Formation.displayFormationsController"
            prefHeight="600.0" prefWidth="900.0"
            styleClass="main-container"
            stylesheets="@/Formation/style.css">

    <!-- 🔝 Top bar stylée -->
    <top>
        <VBox spacing="10">
        <HBox alignment="CENTER_LEFT" spacing="20" styleClass="top-bar">
            <Label text="📚 Liste des Formations" styleClass="header-title"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button fx:id="addFormationButton" text="➕ Ajouter Formation" styleClass="btn-add"/>
        </HBox>
        <!-- 🔍 Barre de recherche stylée -->
        <HBox alignment="CENTER_LEFT" spacing="10" styleClass="search-bar">
            <Label text="🔍" styleClass="icon-label"/>
            <TextField fx:id="searchField" promptText="Rechercher une formation..." styleClass="search-field"/>
        </HBox>
        </VBox>
    </top>

    <!-- 🧾 Liste formations -->
    <center>
        <ScrollPane fitToWidth="true" hbarPolicy="NEVER" styleClass="scroll-pane">
            <VBox fx:id="formationsContainer" spacing="15" styleClass="formations-list"/>
        </ScrollPane>
    </center>

</BorderPane>
