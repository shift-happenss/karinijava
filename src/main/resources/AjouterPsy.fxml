<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Group?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="1000.0" style="-fx-background-color: #f4f4f4;" stylesheets="@dashboard.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="consultation.psy.controllers.AjouterPsyController">

    <!-- Sidebar gauche -->
    <VBox prefHeight="600.0" prefWidth="288.0" style="-fx-background-color: #343a40; -fx-padding: 20px; -fx-spacing: 20px;">
        <Label style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: white;" text="Karrini" />
        <Button style="-fx-text-fill: white; -fx-background-color: transparent;" text="Dashboard" />
        <Button style="-fx-text-fill: white; -fx-background-color: transparent;" text="Consultations" />
        <Button style="-fx-text-fill: white; -fx-background-color: transparent;" text="Psychologues" />
        <Button style="-fx-text-fill: white; -fx-background-color: transparent;" text="Reports" />
        <Button style="-fx-text-fill: white; -fx-background-color: transparent;" text="Settings" />
         <Button fx:id="btnRetour" onAction="#retour" style="-fx-background-color: green; -fx-text-fill: white;" text="← Retour" />
    </VBox>

    <!-- Zone centrale (Content Area) -->
    <BorderPane layoutX="-4.0" prefHeight="0.0" prefWidth="4.0">

        <!-- Navbar en haut -->
        <HBox style="-fx-background-color: #ffffff; -fx-padding: 10px;">
            <Label style="-fx-font-size: 14px;" text="John Doe" />
        </HBox>

        <!-- Formulaire pour ajouter un psy -->
        <AnchorPane layoutX="30.0" layoutY="20.0" prefHeight="500.0" prefWidth="600.0" />

    </BorderPane>
      <Group layoutX="352.0" layoutY="86.0">
          <children>
              <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Ajouter un psy" />

              <Label layoutY="50.0" text="Nom :" />
              <TextField fx:id="nomTF" layoutX="120.0" layoutY="45.0" />

              <Label layoutY="90.0" text="Numéro Tel :" />
              <TextField fx:id="numTF" layoutX="120.0" layoutY="85.0" />

              <Label layoutY="130.0" text="Email :" />
              <TextField fx:id="emailTF" layoutX="120.0" layoutY="125.0" />

              <Label layoutY="170.0" text="Spécialité :" />
              <TextField fx:id="specTF" layoutX="120.0" layoutY="165.0" />

              <Label layoutY="200.0" text="Date :" />
              <DatePicker fx:id="dateTF" layoutX="120.0" layoutY="195.0" />

              <Label layoutY="240.0" text="Heure :" />
              <TextField fx:id="heureTF" layoutX="120.0" layoutY="235.0" promptText="HH:mm" />
          </children>
      </Group>

      <!-- Buttons -->
      <Button layoutX="578.0" layoutY="370.0" onAction="#ajouterPsy" style="-fx-background-color: #79c12c; -fx-text-fill: white;" text="Ajouter" />
      <Button layoutX="325.0" layoutY="23.0" text="🔍" />
      <TextField layoutX="352.0" layoutY="23.0" promptText="Search..." style="-fx-padding: 5px;" />
      <Button layoutX="401.0" layoutY="373.0" onAction="#afficherPsy" style="-fx-background-color: orange; -fx-text-fill: white;" text="Afficher" />

</AnchorPane>
