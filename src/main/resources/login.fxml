<AnchorPane prefHeight="440.0" prefWidth="741.0"
            style="-fx-background-image: url('/home-banner.jpg');"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.controllers.LoginController">

   <fx:include source="header.fxml"/>

 <children>


    <VBox layoutX="252.0" layoutY="122.0" prefWidth="240.0" spacing="12.0" alignment="CENTER"
          style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 8; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 5);">

       <children>
          <Label text="Welcome BACK" textAlignment="CENTER" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #3e566d;" />

          <Label text="Entrer votre ID et votre mot de passe"
                 textAlignment="CENTER" textFill="#767373"
                 wrapText="true" style="-fx-font-size: 12px;" />

          <TextField fx:id="idField" promptText="Identifiant"
                     prefWidth="200.0" style="-fx-background-radius: 4;" />

          <PasswordField fx:id="passwordField" promptText="Mot de passe"
                         prefWidth="200.0" style="-fx-background-radius: 4;" />

          <Button text="Se connecter" onAction="#handleLoginButton"
                  prefWidth="200.0"
                  style="-fx-background-color: #FFC727; -fx-background-radius: 4; -fx-font-weight: bold;" />

          <Hyperlink text="Pas encore de compte ?" onAction="#handleRegisterLink"
                     textAlignment="CENTER" style="-fx-text-fill: #3e566d;" />

          <Hyperlink text="Mot de passe oubliÃ© ?" textAlignment="CENTER"
                     style="-fx-text-fill: #3e566d;" />
       </children>
    </VBox>

 </children>
