<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<ScrollPane prefHeight="596.0" prefWidth="820.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="consultation.psy.controllers.AfficherPsyController">
    <content>
        <AnchorPane prefHeight="500.0" prefWidth="700.0" style="-fx-background-color: #f4f4f4;" stylesheets="@dashboard.css">

               <!-- Sidebar gauche -->
            <VBox prefHeight="663.0" prefWidth="250" style="-fx-background-color: #343a40; -fx-padding: 20px; -fx-spacing: 20px;">
                <Label style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: white;" text="Karrini" />
                <Button style="-fx-text-fill: white; -fx-background-color: transparent;" text="Dashboard" />
                <Button style="-fx-text-fill: white; -fx-background-color: transparent;" text="Consultations" />
                <Button style="-fx-text-fill: white; -fx-background-color: transparent;" text="Psychologues" />
                <Button style="-fx-text-fill: white; -fx-background-color: transparent;" text="Reports" />
                <Button style="-fx-text-fill: white; -fx-background-color: transparent;" text="Settings" />
            </VBox>
         <AnchorPane layoutX="346.0" layoutY="520.0" AnchorPane.leftAnchor="346.0" AnchorPane.topAnchor="520.0">
            <children>
                  <!-- Sorting Buttons -->
                  <HBox spacing="10">
                      <Button onAction="#onSortByNameAsc" text="Name ↑" />
                      <Button onAction="#onSortByNameDesc" text=" Name ↓" />
                      <Button onAction="#onSortByDateAsc" text=" Date ↑" />
                      <Button onAction="#onSortByDateDesc" text=" Date ↓" />
                      <Button onAction="#onSortBySpecialiteAsc" text=" specialite ↑" />
                      <Button onAction="#onSortBySpecialiteDesc" text=" specialite ↓" />

                  </HBox>
            </children>
         </AnchorPane>

            <!-- Content Area -->
            <AnchorPane layoutX="300.0" layoutY="20.0" prefHeight="500" prefWidth="400" AnchorPane.topAnchor="20.0">
                <Label layoutX="30" layoutY="38" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Liste des Psychologues" />
                <ListView fx:id="listViewPsy" layoutX="30.0" layoutY="86.0" prefHeight="400" prefWidth="640" />
                <Button fx:id="btnRetour" layoutX="520.0" layoutY="14.0" onAction="#retour" text="← Retour" />
                <TextField fx:id="searchField" layoutY="-13.0" onKeyReleased="#filterPsys" promptText="Rechercher..." AnchorPane.topAnchor="-8.0" />
            </AnchorPane>
         <Button layoutX="261.0" layoutY="14.0" text="🔍" />
        </AnchorPane>
    </content>
</ScrollPane>
