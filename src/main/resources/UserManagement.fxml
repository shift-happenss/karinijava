<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="consultation.psy.controllers.UserManagementController">
    <VBox spacing="20" style="-fx-padding: 20;">
        <HBox spacing="10">
            <TextField fx:id="nameField" promptText="Name" />
            <TextField fx:id="emailField" promptText="Email" />
            <PasswordField fx:id="passwordField" promptText="Password" />
            <Button text="Add User" onAction="#addUser" />
        </HBox>
        <ListView fx:id="userListView" prefHeight="400" />
        <HBox spacing="10">
            <Button text="Update User" onAction="#updateUser" />
            <Button text="Delete User" onAction="#deleteUser" />
        </HBox>
    </VBox>
</AnchorPane>
