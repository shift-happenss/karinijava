<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.gui.AjouterRessourceController" spacing="6">
    <padding>
        <Insets top="12" right="12" bottom="12" left="12"/>
    </padding>

    <Label text="Ajouter une Ressource" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

    <Label text="Titre :"/>
    <TextField fx:id="titreField" promptText="Entrez le titre de la ressource" />

    <Label text="Description :"/>
    <TextArea fx:id="descriptionField" promptText="Entrez la description de la ressource" wrapText="true" prefRowCount="2"/>

    <Label text="Type :"/>
    <TextField fx:id="typeField" promptText="Entrez le type de la ressource" />

    <Label text="URL vidéo (facultatif) :"/>
    <HBox spacing="10">
        <TextField fx:id="urlVideoField" promptText="Entrez l'URL vidéo" />
        <Button text="📁" onAction="#handleSelectVideoFile" />
    </HBox>

    <Label text="URL image (facultatif) :"/>
    <HBox spacing="10">
        <TextField fx:id="urlImageField" promptText="Entrez l'URL de l'image" />
        <Button text="📁" onAction="#handleSelectImageFile" />
    </HBox>

    <Label text="URL fichier (facultatif) :"/>
    <TextField fx:id="urlFichierField" promptText="Entrez l'URL du fichier" />

    <Label text="Contenu texte :"/>
    <TextArea fx:id="contenuTexteField" promptText="Entrez le contenu détaillé de la ressource" wrapText="true" prefRowCount="3"/>

    <HBox spacing="10">
        <Button text="Ajouter" onAction="#ajouterRessource" style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
        <Button text="Annuler" onAction="#annuler" style="-fx-background-color: #f44336; -fx-text-fill: white;"/>
    </HBox>
</VBox>
