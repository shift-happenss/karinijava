<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="rootPane"
            xmlns:fx="http://javafx.com/fxml/1"
            xmlns="http://javafx.com/javafx/13"
            fx:controller="org.example.controllers.ahmed.AfficherEmploiController"
            stylesheets="@/dashboard.css">

    <!-- Navbar + bouton mode sombre tout en haut à droite -->
    <top>
        <HBox styleClass="hbox" spacing="10" style="-fx-background-color: blue; -fx-padding:10;">
            <Button text="Home" styleClass="button-primary"/>
            <Button text="About" styleClass="button-primary"/>
            <Button text="Pages" styleClass="button-primary"/>
            <Button text="Contact" styleClass="button-primary"/>
            <!-- espaceur pour pousser le bouton sombre à droite -->
            <Region HBox.hgrow="ALWAYS"/>
            <Button fx:id="themeToggleButton"
                    onAction="#onToggleTheme"
                    styleClass="button-primary"/>
            <Button fx:id="translateButton" onAction="#onTranslate" styleClass="button-primary"/>

        </HBox>
    </top>
    <!-- AAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA -->

    <!-- Centre inchangé, à l’exception du titre centré et de la suppression du bouton “Ajouter Emploi” ici -->
    <center>

                <ScrollPane fx:id="scrollPane"
                            fitToWidth="true"
                            fitToHeight="true"
                            hbarPolicy="AS_NEEDED"
                            vbarPolicy="AS_NEEDED"
                            style="-fx-background-color: transparent;">
                    <content>
                        <VBox spacing="10" style="-fx-padding: 20;">
                            <!-- Titre centré et stylisé -->
                            <HBox alignment="CENTER">
                                <Label fx:id="titleLabel"
                                       text="Liste des emplois du temps"
                                       style="-fx-font-weight: bold;
                  -fx-font-size: 24px;
                  -fx-text-fill: #E6B800;"/>
                            </HBox>


                            <!-- Champs de recherche -->
                            <HBox spacing="10" alignment="CENTER" style="-fx-padding: 5 0 10 0;">
                                <TextField fx:id="searchTitreField" promptText="Rechercher par titre…"/>
                                <TextField fx:id="searchDescriptionField" promptText="Rechercher par description…"/>
                                <TextField fx:id="searchOwnerField" promptText="Rechercher par propriétaire…"/>
                            </HBox>

                            <!-- Liste dynamique -->
                            <VBox fx:id="vboxEmplois" spacing="10"/>

                            <!-- Nouveau HBox placé directement sous la liste -->
                            <HBox spacing="10" alignment="CENTER" style="-fx-padding: 10 0 0 0;">
                                <Button fx:id="btnAjouterEmploi"
                                        text="Ajouter Emploi"
                                        onAction="#handleAjouterEmploi"
                                        style="-fx-background-color: blue; -fx-text-fill: white;"/>
                                <Button fx:id="btnEvenements"
                                        text="Voir Événements"
                                        onAction="#handleVoirEvenements"
                                        style="-fx-background-color: blue; -fx-text-fill: white;"/>
                                <Button fx:id="btnRetourAdmin"
                                        text="Retour Admin"
                                        onAction="#allerVersadmin"
                                        style="-fx-background-color: blue; -fx-text-fill: white;"/>
                                <Button fx:id="btnVoirNews"
                                        text="Voir News"
                                        onAction="#handleVoirNews"
                                        style="-fx-background-color: blue; -fx-text-fill: white;"/>
                            </HBox>


                        </VBox>
                    </content>
                </ScrollPane>

    </center>





    <bottom>
        <VBox spacing="5">
            <HBox spacing="10" style="-fx-background-color: blue; -fx-padding: 10;">
                <Hyperlink text="Terms of Service" styleClass="button-link"/>
                <Hyperlink text="Privacy Policy" styleClass="button-link"/>
                <Hyperlink text="Help" styleClass="button-link"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Label text="Search..." style="-fx-text-fill: #00008B;"/>
            </HBox>
        </VBox>
    </bottom>

</BorderPane>
