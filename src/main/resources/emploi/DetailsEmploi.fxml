<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="tn.esprit.controllers.DetailsEmploiController">
    <children>
        <!-- Partie haut : Détails de l'emploi -->
        <VBox spacing="15" alignment="CENTER" AnchorPane.topAnchor="20" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20" style="-fx-background-color: #f0f8ff">
            <Label text="Détails de l'Emploi" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #00008B;"/>
            <Label fx:id="lblTitre" style="-fx-font-size: 18px; -fx-text-fill: #00008B;"/>
            <Label fx:id="lblDescription" style="-fx-font-size: 16px; -fx-text-fill: #00008B;"/>
            <Label fx:id="lblProprietaire" style="-fx-font-size: 16px; -fx-text-fill: #00008B;"/>
            <Label text="Les événements ajoutés à cet emploi :"
                   style="-fx-font-size: 16px; -fx-text-fill: #00008B; -fx-font-weight: bold;"/>
            <VBox fx:id="vboxEvenements" spacing="10" alignment="CENTER"
                  AnchorPane.topAnchor="250" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20"
                  style="-fx-background-color: #ffffff; -fx-border-color: #00008B; -fx-border-width: 2; -fx-border-radius: 5; -fx-background-radius: 5;">
            </VBox>
            <Button text="Retour" onAction="#handleRetour" style="-fx-background-color: #FFD700; -fx-text-fill: #00008B; -fx-font-weight: bold;"/>
        </VBox>
    </children>
</AnchorPane>
