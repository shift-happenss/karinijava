<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<?import javafx.scene.control.ComboBox?>
<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="tn.esprit.controllers.AjouterEmploiController">
    <children>
        <VBox spacing="15" alignment="CENTER_LEFT" AnchorPane.topAnchor="20" AnchorPane.bottomAnchor="20" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20" style="-fx-background-color: #f0f8ff;" >

            <Label text="Ajouter un Emploi" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #00008B;"/>

            <!-- Titre -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Titre :" prefWidth="100"/>
                <TextField fx:id="tfTitre" promptText="Titre de l'emploi" style="-fx-background-color: #FFFFFF;" />
            </HBox>

            <!-- Description -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Description :" prefWidth="100"/>
                <TextArea fx:id="taDescription" promptText="Description de l'emploi" prefRowCount="4" style="-fx-background-color: #FFFFFF;" />
            </HBox>

            <!-- Propriétaire -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Propriétaire :" prefWidth="100"/>
                <ComboBox fx:id="cbProprietaire" prefWidth="200" style="-fx-background-color: #FFFFFF;" />
            </HBox>

            <!-- Boutons -->
            <HBox spacing="10" alignment="CENTER">
                <Button text="Ajouter" onAction="#handleAjouter" style="-fx-background-color: #FFD700; -fx-text-fill: #00008B;" />
                <Button text="Annuler" onAction="#handleAnnuler" style="-fx-background-color: #FFD700; -fx-text-fill: #00008B;" />
            </HBox>
        </VBox>
    </children>
</AnchorPane>

