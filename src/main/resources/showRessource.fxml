<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.ImageView?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="tn.esprit.gui.ShowRessourceController"
            prefWidth="700.0" prefHeight="600.0"
            style="-fx-background-color: #f5f5f5;">

    <VBox spacing="20.0" layoutX="25.0" layoutY="25.0" prefWidth="650.0" prefHeight="550.0">

        <!-- Titre -->
        <Label fx:id="titleLabel" text="Ressource DÃ©tails"
               style="-fx-text-fill: #2c3e50; -fx-font-weight: bold;"
               alignment="CENTER">
            <font>
                <Font name="Arial Bold" size="24"/>
            </font>
        </Label>

        <!-- Labels pour afficher les informations de la ressource -->
        <Label fx:id="idLabel" text="ID: " />
        <Label fx:id="categoryLabel" text="CatÃ©gorie: " />
        <Label fx:id="titreLabel" text="Titre: " />
        <Label fx:id="descriptionLabel" text="Description: " />
        <Label fx:id="typeLabel" text="Type: " />
        <Label fx:id="videoLabel" text="VidÃ©o: " />
        <ImageView fx:id="imageView" fitWidth="200.0" fitHeight="200.0" preserveRatio="true" />
        <Label fx:id="fileLabel" text="Fichier: " />
        <Label fx:id="contentLabel" text="Contenu: " />

        <!-- Delete Button -->
        <Button fx:id="deleteButton" text="Supprimer la Ressource"
                style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px;"
                onAction="#handleDeleteClick" prefWidth="200.0" alignment="CENTER" />

        <!-- Update Button -->
        <Button fx:id="updateButton" text="Modifier"
                onAction="#onUpdateClicked"
                style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px;"
                prefWidth="120.0" />

        <!-- Section Commentaires -->
        <Label style="-fx-font-size: 16px; -fx-text-fill: #2c3e50;" text="ðŸ’¬ Commentaires" />

        <ScrollPane fitToWidth="true" prefHeight="180.0">
            <VBox fx:id="commentairesContainer" spacing="10.0" style="-fx-background-color: #ffffff;">
                <padding>
                    <Insets bottom="10" left="10" right="10" top="10" />
                </padding>
            </VBox>
        </ScrollPane>
    </VBox>

</AnchorPane>
