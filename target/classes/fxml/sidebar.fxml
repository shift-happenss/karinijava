<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.shape.Rectangle?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="controllers.SidebarController"
      spacing="15"
      prefWidth="220"
      style="-fx-background-color: linear-gradient(to bottom, #1e3c72, #2a5298); -fx-padding: 25;">

   <!-- Optionally add a logo or title -->
   <Button text="📚 LOCA School"
           style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;"
           disable="true" />

   <!-- Separator -->
   <Rectangle height="2" width="160" style="-fx-fill: white; -fx-opacity: 0.2;" />

   <!-- Navigation Buttons -->
   <Button text="🏠  Accueil"
           onAction="#goToCours"
           styleClass="sidebar-button" />

   <Button text="📝  Examens"
           onAction="#goToExamens"
           styleClass="sidebar-button" />

   <Button text="❓  Questions"
           onAction="#goToQuestions"
           styleClass="sidebar-button" />

   <Button text="✅  Réponses"
           onAction="#goToReponses"
           styleClass="sidebar-button" />

</VBox>
